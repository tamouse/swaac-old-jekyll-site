{
  "name": "swaac.tamouse.org",
  "version": "0.0.0",
  "description": "My awesome site",
  "main": "gulpfile.js",
  "author": "Me",
  "license": "MIT",
  "repository": "tamouse/swaac",
  "devDependencies": {
    "bootstrap-sass": "^3.3.7",
    "browser-sync": "^2.7.12",
    "concurrently": "^3.4.0",
    "node-sass": "^4.5.2",
    "watch": "^1.0.2"
  },
  "scripts": {
    "sass": "node-sass --output _site/assets/css --source-map true  styles/main.scss",
    "sass:dist": "node-sass --output source/assets/css --source-map true styles/main.scss",
    "sass:watch": "watch 'npm run sass' styles/",
    "jekyll": "bundle exec jekyll build --incremental --watch",
    "jekyll:dist": "bundle exec jekyll build --config=_config.yml,_baseurl.yml",
    "jekyll:watch": "watch 'npm run jekyll'",
    "sync:start":  "browser-sync start -s _site --files _site/**/* --reload-delay 1000 --reload-debounce",
    "start": "concurrently 'npm run sync:start' 'npm run sass:watch' 'npm run jekyll'",
    "dist": "npm run sass:dist && npm run jekyll:dist",
    "build": "npm run dist",
    "publish": "npm run dist"
  }
}
